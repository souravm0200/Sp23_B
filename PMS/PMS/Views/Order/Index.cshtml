@model IEnumerable<PMS.EF.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (TempData["Msg"] != null) { 
    <h1 class="alert @TempData["Color"]">@TempData["Msg"]</h1>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CId)
        </td>
        <td>
            <a class="btn btn-success" href="/Order/AddCart/@item.Id">Add to Cart</a>
        </td>
    </tr>
}

</table>
<p class="text-center">
    @for (int i = 1; i <= ViewBag.pages; i++) { 
        <a href="/Order/Index/@i" class="btn btn-danger">@i</a>
    }
</p>
